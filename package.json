{
  "name": "sigrid",
  "version": "1.0.0",
  "description": "LLM CLI agent with file tooling",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./llm": "./llm.js",
    "./filetooling": "./filetooling.js",
    "./addons/sqlite.js": "./test-fixtures/addons/sqlite.js"
  },
  "bin": {
    "sigrid": "bin/sigrid.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:local": "dotenv -e .env.local -- node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathIgnorePatterns=integration --testPathIgnorePatterns=stress",
    "test:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:integration:keep": "KEEP_TEST_DIR=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:integration:verbose": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=integration --verbose --detectOpenHandles",
    "test:stress": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=stress",
    "test:stress:keep": "KEEP_TEST_DIR=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=stress",
    "test:static": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern='(integration|stress)'",
    "test:static:only": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern=static",
    "test:static:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern='static.*integration'",
    "test:static:stress": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --testPathPattern='static.*stress'",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "glob": "^11.0.0",
    "ignore": "^7.0.5",
    "openai": "^5.19.1",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "tar": "^7.4.3"
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!chat.js",
      "!*.test.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {}
  }
}
